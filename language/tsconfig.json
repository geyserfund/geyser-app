{
    "compilerOptions": {
      "target": "ES2018",
      "module": "NodeNext",  // or "Node16", "ESNext"
      "moduleResolution": "NodeNext",  // add this to match the module setting
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }